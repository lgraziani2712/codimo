{
  "name": "codimo",
  "version": "1.0.0-alpha.0",
  "private": true,
  "description": "A simple platform for learning Computational Thinking",
  "main": "client/main.jsx",
  "scripts": {
    "build": "webpack -p --config ./.dev-tools/config/webpack.config.prod.js  --profile",
    "build:start": "npm run build -- --progress && static dist",
    "build-storybook": "build-storybook",
    "check-deps": "dep-tool compare . -a",
    "flow": "flow",
    "flow:check": "flow check",
    "flow:start": "flow start",
    "flow:stop": "flow stop",
    "lint": "eslint core activities client dev-elements .dev-tools --ext .js --ext .jsx --fix",
    "lint:css": "stylelint activities/**/*.jsx activities/**/*.js client/**/*.jsx client/**/*.js core/**/*.jsx core/**/*.js",
    "start": "webpack-dev-server --progress --config ./.dev-tools/config/webpack.config.dev.js",
    "stats": "webpack --config ./.dev-tools/config/webpack.config.dev.js --profile --json > stats.json",
    "storybook:activities": "cross-env STORYBOOK_FOLDER=activities start-storybook -s ./dist -p 6006",
    "storybook:client": "cross-env STORYBOOK_FOLDER=client start-storybook -s ./dist -p 6006",
    "storybook:core": "cross-env STORYBOOK_FOLDER=core start-storybook -s ./dist -p 6006",
    "test": "babel-node .dev-tools/scripts/test.js",
    "test:coverage": "babel-node .dev-tools/scripts/test.js --coverage"
  },
  "author": "Luciano Graziani <lgraziani2712@gmail.com>",
  "license": "MIT",
  "keywords": [
    "codimo",
    "pixijs",
    "learning-to-code",
    "react",
    "storybooks",
    "flowtype",
    "educational-game",
    "computational-thinking"
  ],
  "moduleRoots": [
    "dev-elements"
  ],
  "dependencies": {
    "dotenv": "4.0.0",
    "gsap": "1.20.2",
    "node-static": "0.7.9",
    "pixi.js": "4.5.4",
    "react": "16.0.0-beta.5",
    "react-dom": "16.0.0-beta.5",
    "react-loadable": "4.0.4",
    "react-router-dom": "4.1.2",
    "speculation": "1.0.5",
    "styled-components": "2.1.2",
    "sweetalert2": "6.6.6",
    "twemoji": "2.4.1"
  },
  "devDependencies": {
    "@storybook/react": "3.2.5",
    "babel-cli": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.2",
    "babel-plugin-dynamic-import-node": "1.0.2",
    "babel-plugin-dynamic-import-webpack": "1.0.1",
    "babel-plugin-styled-components": "1.1.7",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-plugin-transform-export-extensions": "6.22.0",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-preset-env": "1.6.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "babili-webpack-plugin": "0.1.2",
    "clean-webpack-plugin": "0.1.16",
    "cross-env": "5.0.3",
    "dependency-comparator": "2.0.0",
    "eslint": "4.4.0",
    "eslint-import-resolver-webpack": "0.8.3",
    "eslint-plugin-flowtype": "2.35.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-react": "7.2.1",
    "file-loader": "0.11.2",
    "flow-bin": "0.52.0",
    "flow-typed": "2.1.5",
    "html-webpack-plugin": "2.30.1",
    "jest": "20.0.4",
    "jest-styled-components": "4.3.0",
    "react-test-renderer": "16.0.0-beta.5",
    "stylelint": "8.0.0",
    "stylelint-config-standard": "17.0.0",
    "stylelint-order": "0.6.0",
    "stylelint-processor-styled-components": "0.3.0",
    "webpack": "3.4.1",
    "webpack-dev-server": "2.6.1"
  }
}
